<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="icon">
        <item name="android:layout_width">@dimen/size_small_24</item>
        <item name="android:layout_height">@dimen/size_small_24</item>
    </style>

    <style name="icon.left" parent="icon">
        <item name="android:gravity">top|left</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium_24</item>
        <item name="android:layout_marginLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="icon.right" parent="icon">
        <item name="android:gravity">top|right</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium_24</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_32</item>
    </style>

    <style name="user_info_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/size_large_72</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginRight">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_32</item>
    </style>

    <style name="user_info_item_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">false</item>
        <item name="android:enabled">false</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/font_small_14</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="user_statistic">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
    </style>

    <style name="user_statistic.value" parent="user_statistic">
        <item name="android:textSize">@dimen/font_larger_24</item>
    </style>

    <style name="user_statistic.hint" parent="user_statistic">
        <item name="android:textSize">@dimen/font_small_14</item>
    </style>

    <style name="custom_dialog">
        <item name="android:fullDark">@android:color/transparent</item>
    </style>

    <style name="drawer_header">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_small_14</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="drawer_header.user_name" parent="drawer_header">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <style name="drawer_header.email" parent="drawer_header">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
    </style>

    <style name="drawer_header_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/drawer_header_size</item>
        <item name="android:background">@drawable/nav_header_bg</item>
        <item name="android:paddingTop">@dimen/spacing_medium_24</item>
        <item name="android:paddingRight">@dimen/font_normal_16</item>
        <item name="android:paddingBottom">@dimen/spacing_small_8</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
    </style>

    <style name="drawer_header_avatar">
        <item name="android:layout_height">@dimen/drawer_header_avatar_size</item>
        <item name="android:layout_width">@dimen/drawer_header_avatar_size</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal_16</item>
    </style>

    <style name="placeholder_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small_8</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="placeholder_image">
        <item name="android:layout_width">@dimen/placeholder_photo_size_90</item>
        <item name="android:layout_height">@dimen/placeholder_photo_size_90</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/spacing_large_56</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="login_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="login_field.text" parent="login_field">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/font_small_14</item>
    </style>

    <style name="login_field.text.input" parent="login_field.text">
        <item name="android:textColorHint">@color/grey</item>
    </style>

    <style name="login_field.text.reminder" parent="login_field.text">
        <item name="android:textColor">@color/grey</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:color">@color/color_accent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium_28</item>
        <item name="android:layout_marginRight">@dimen/spacing_medium_28</item>
        <item name="android:layout_marginBottom">@dimen/spacing_normal_16</item>
        <item name="android:layout_marginLeft">@dimen/spacing_medium_28</item>
    </style>

</resources>
