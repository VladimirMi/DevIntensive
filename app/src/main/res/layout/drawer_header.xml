<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/drawer_header_layout">

    <ImageView
        android:id="@+id/user_avatar"
        style="@style/drawer_header_avatar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_medium_56"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_txt"
            style="@style/drawer_header.user_name"
            android:text="@string/app_name"/>

        <TextView
            android:id="@+id/user_email_txt"
            style="@style/drawer_header.email"
            android:text="@string/email"/>
    </LinearLayout>

</RelativeLayout>