<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_large_72">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/github_til"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/github_et"
            style="@style/user_info_item_text"
            android:hint="@string/github_hint"/>
    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/github_img"
        style="@style/icon.right"
        android:src="@drawable/ic_visibility_24dp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>