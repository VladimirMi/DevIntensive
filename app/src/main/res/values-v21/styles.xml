<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/color_accent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Button.Red" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/color_accent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/spacing_medium_28</item>
        <item name="android:paddingRight">@dimen/spacing_medium_28</item>
        <item name="android:paddingBottom">@dimen/spacing_medium_28</item>
        <item name="android:paddingLeft">@dimen/spacing_normal_16</item>
    </style>
</resources>