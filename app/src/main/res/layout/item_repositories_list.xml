<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <LinearLayout
        style="@style/user_info_item"
        android:layout_marginLeft="0dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/github_til"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/github_et"
                    style="@style/user_info_item_text"
                    android:hint="@string/github_hint"
                    android:tag="@string/git_tag"/>

            </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/github_img"
        style="@style/icon.right"
        android:src="@drawable/ic_visibility_24dp"/>

</LinearLayout>